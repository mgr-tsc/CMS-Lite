{
  "AzureStorage": {
    "ConnectionString": "UseDevelopmentStorage=true",
    "Container": "cms"
  },
  "Database": {
    "Path": "../docker/data/cms.sqlite"
  },
  "Jwt": {
    "Key": "development-jwt-secret-key-for-local-testing-32-chars-minimum",
    "Issuer": "CmsLiteDev",
    "Audience": "CmsLiteDevUsers",
    "ExpirationMinutes": 60,
    "ValidateIssuer": false,
    "ValidateAudience": false,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "PdfValidation": {
    "MaxFileSizeBytes": 8388608,
    "MaxPageCount": 1000,
    "AllowPasswordProtected": false,
    "ScanForEmbeddedFiles": true,
    "ScanForJavaScript": true
  },
  "RateLimiting": {
    "Auth": {
      "PermitLimit": 50,
      "WindowMinutes": 1,
      "QueueLimit": 5
    },
    "ContentRead": {
      "PermitLimit": 500,
      "WindowMinutes": 1,
      "QueueLimit": 10
    },
    "ContentWrite": {
      "PermitLimit": 200,
      "WindowMinutes": 1,
      "QueueLimit": 10
    },
    "BulkOperations": {
      "PermitLimit": 50,
      "WindowMinutes": 1,
      "QueueLimit": 5
    },
    "Admin": {
      "PermitLimit": 100,
      "WindowMinutes": 1,
      "QueueLimit": 5
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  }
}